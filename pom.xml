        <!-- #1 Install Node and NPM -->
        <execution>
          <id>install node and npm</id>
          <goals>
            <goal>install-node-and-npm</goal>
          </goals>
        </execution>

        <!-- #2 Install project dependencies -->
        <execution>
          <id>npm install</id>
          <goals>
            <goal>npm</goal>
          </goals>
        </execution>

        <!-- #3 Run package.json's build-prod script  -->
